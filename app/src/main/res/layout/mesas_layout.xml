<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/eueue"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edtMesa"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_edt_mesa"
            android:drawableRight="@drawable/ic_baseline_search"
            android:hint="Pesquisar Mesa"
            android:paddingLeft="7dp"
            android:textColorHint="#222" />


        <ImageView
            android:id="@+id/IconHouseMenu"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_baseline_house" />
    </LinearLayout>


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="650dp"
    android:orientation="vertical">

        <GridView
            android:id="@+id/gridMesas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:numColumns="2" />

</LinearLayout>


</LinearLayout>