<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/giz"
    android:orientation="vertical"
    tools:context=".SettingsActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/IconEngrenagemSettings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_baseline_settings" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:text="Settings"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgPerfilSettings"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/fotoperfilteste"
            app:civ_border_color="#FF2C00"
            app:civ_border_width="1dp" />

        <TextView
            android:id="@+id/txtPerfilSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:text="Tayler Wilson"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <EditText
        android:id="@+id/edtSettings1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="#676767" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/txtTitleSettings1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Configuração da conta"
            android:textColor="#FF2C00"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/linearEditarPefil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtEditarPerfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Editar perfil"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iconEditarPerfil"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="271dp"
                android:src="@drawable/ic_baseline_arrow_forward_ios" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearAlterarSenha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtAlterarSenhaSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alterar Senha"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iconAlterarSenhaSettings"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="259dp"
                android:src="@drawable/ic_baseline_arrow_forward_ios" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtNotificacoesSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notificações"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/bottomNotificacoesSettings"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="228dp"
                app:thumbTint="@drawable/thump"
                app:trackTint="@drawable/track" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtModoEscuroSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modo Escuro"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/bottomModoEscuroSettings"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="225dp"
                android:checked="true"
                app:thumbTint="@drawable/thump"
                app:trackTint="@drawable/track" />
        </LinearLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/edtSettings2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="#676767" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/linearVersaoPatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtVersaoPatch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Versão do Pacth"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgVersaoPatch"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="235dp"
                android:src="@drawable/ic_baseline_arrow_forward_ios" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearPoliticaPrivacidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtPoliticaPrivacidade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Política de Privacidade"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgPoliticaPrivacidade"
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:layout_marginLeft="193dp"
                android:src="@drawable/ic_baseline_arrow_forward_ios" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearTermosCondicoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtTermosCondicoes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Termos e Condições"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgTermosCondicoes"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="210dp"
                android:src="@drawable/ic_baseline_arrow_forward_ios" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>